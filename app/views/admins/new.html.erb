<div class="logged_out">
  <div class="login_registration">
    <%= form_for [:organization, @admin] do |f| %>
    <% if @admin.errors.any? %>
    <div class="error_messages">
      <% @admin.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :username %><br/>
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </div>
    <div class="submit-button"><%= f.submit "REGISTER" %></div>
    <% end %>
  </div>
  <div class="italics">
    If you are already a registered user, go to the
    <%= link_to "Log In Page", new_session_path, {:class => "top_link"} %>.
  </div>
</div>
