<div class="hp">
<h2>Stop List</h2>
<h3>Test.....Load stops by importing a CSV File. If you have not done this before, you may need to use the template available for download.</h3>

<!-- <h3>Download the stops associated with the <%= @stops[0].tour.name%> tour.</h3> -->
<%= link_to 'Download template', stops_download_template_url %>
  <%= form_tag import_organization_tour_stops_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
<br />

</div>
  <table>
    <thead>
      <tr>
        <th>Stop Number</th>
        <th>Name</th>
      </tr>
    </thread>
    <tbody>
      <% @stops.sort_by { |stop| stop.stop_num }.each do |stop| %>
        <tr>
          <td><%= stop.stop_num %></td>
          <td><%= stop.name %></td>
          <td><%= link_to 'See stop details', organization_tour_stop_path(stop.tour.organization_id, stop.tour_id, stop.id) %></td>
          <td><%= link_to 'Edit stop details', edit_organization_tour_stop_path(stop.tour.organization_id, stop.tour_id, stop.id) %></td>
          <td><%= link_to 'Delete stop', organization_tour_stop_path(stop.tour.organization_id, stop.tour_id, stop.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
